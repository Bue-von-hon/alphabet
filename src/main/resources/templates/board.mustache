{{>layout/header}}
<nav class = "navigation">
    <ul class = "nav_items">
        <li class="nav_item_logo"><a href="/"><img class="logo" src="/img/Wabcblock.svg"></a></li>
        <li class="nav_item"><a href="/introduction">소개</a></li>
        <li class="nav_item"><a href="/history">기록</a></li>
        <li class="nav_item"><a href="/contact">가입</a></li>
        <li class="nav_item"><a href="/board">게시판</a></li>
    </ul>
</nav>
<main class="contents">
    <section>
        <table>
            <colgroup>
                <col width="20%">
                <col width="*">
                <col width="20%">
            </colgroup>
            <thead class="thead-strong">
            <tr>
                <th class="board_tbl_num">게시글 번호</th>
                <th class="board_tbl_title">제목</th>
                <th class="board_tbl_date">최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#boardList}}
                <tr>
                    <td class="board_list">{{board_id}}</td>
                    <th>
                        <a href="/board/{{& board_id }}">
                            {{title}}
                        </a>
                    </th>
                    <td class="over_hidden">{{created_time}}</td>
                </tr>
            {{/boardList}}
            </tbody>
        </table>
        <div>
            {{#pageList}}
            <span>
                <a href="/board?page={{.}}">{{.}}</a>
            </span>
            {{/pageList}}
        </div>
        <a href="/post">추가하기</a>
        <form action="/board/search" method="get">
            <div>
                <input name="keyword" type="text" placeholder="제목으로 검색">
            </div>
            <button>검색</button>
        </form>
    </section>
</main>
{{>layout/footer}}
