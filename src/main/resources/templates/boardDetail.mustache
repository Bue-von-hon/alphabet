{{>layout/header}}
<nav class = "navigation">
    <ul class = "nav_items">
        <li class="nav_item_logo"><a href="/"><img class="logo" src="/img/Wabcblock.svg"></a></li>
        <li class="nav_item"><a href="/introduction">소개</a></li>
        <li class="nav_item"><a href="/history">기록</a></li>
        <li class="nav_item"><a href="/contact">가입</a></li>
    </ul>
</nav>
<main class="contents">
    <section>
        {{#board}}
            <div class="bDetail_title">
                {{title}}
            </div>
            <hr>
            <div class="bDetail_content">
                {{content}}
            </div>
            <div class="bDetail_modify">
                <form class="delete-form" action="/post/{{board_id}}" method="post">
                    <input type="hidden" name="_method" value="delete"/>
                    <input type="password" name="pw">
                    <button class="bDetail_form_button" id="delete-btn">delete</button>
                </form>
                <br>
                <form action="/post/edit/{{board_id}}" method="put">
                    <input type="hidden" name="_method" value="put"/>
                    <input type="password" name="pw">
                    <button class="bDetail_form_button" id="edit-btn">edit</button>
                </form>
            </div>
        {{/board}}
    </section>
</main>
{{>layout/footer}}
